{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "jsx": "react",
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016"
    ],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "pretty": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "specs",
    "**/*.spec.ts"
  ]
}